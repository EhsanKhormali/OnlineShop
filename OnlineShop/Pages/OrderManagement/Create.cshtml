@page
@model OnlineShop.Pages.OrderManagement.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Order Selected Product</h1>

<h4>Product details</h4>
<hr />
@if (true)
{
    if (!Model.Company.IsValid)
    {
        <p class="alert-danger"> The company not Validater by website owner </p>
        
    }
    if (true)
    {
        <p class="alert-danger">  the company currently not accepting orders</p>
        
    }
    <hr />
}

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Product.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Product.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Product.Price)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Product.Price)
    </dd>
    <dt class="col-sm-2">
        Company Name
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Company.Name)
    </dd>
    <dt class="col-sm-2">
        Order Time
    </dt>
    <dd class="col-sm-10">
        @DateTime.Now.ToString();
    </dd>
    <dt class="col-sm-2">
        Company Operating Time
    </dt>
    <dd class="col-sm-10">
        From @Model.Company.OperationStartTime.Value.ToShortTimeString() To @Model.Company.OperationEndTime.Value.ToShortTimeString();
    </dd>
</dl>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.ProductId" id="sth" name="sth" value="@Model._id" />
            <div class="form-group">
                <label asp-for="Order.OrdereUser" class="control-label"></label>
                <input asp-for="Order.OrdereUser" class="form-control" />
                <span asp-validation-for="Order.OrdereUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Description" class="control-label"></label>
                <input asp-for="Order.Description" class="form-control" />
                <span asp-validation-for="Order.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" disabled=@Model.CanBeOrdered value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
