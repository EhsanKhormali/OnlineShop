@page
@model OnlineShop.Pages.CompanyManagment.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
{
<p>
    <a asp-page="Create">Create New</a>
</p>
            }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].OperationStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].OperationEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].IsValid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Description)
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>
            }
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.OperationStartTime.Value.ToShortTimeString()
            </td>
            <td>
                @item.OperationEndTime.Value.ToShortTimeString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsValid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                @if (User.IsInRole("Admin"))
                {
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyId">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
